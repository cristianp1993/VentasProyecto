@model IEnumerable<VentasProyect.Models.Persona.Persona>

@{
    var typeForm = ViewBag.Type;
    ViewBag.Title = typeForm;
}

@Styles.Render("~/Table")

<h2>Personas</h2>

<div class="col-md-12 table-style">
    <div class="container-buttom">
        <a href="@Url.Action("Create", "Persona")" class="btn btn-default btn-add-form">
            <span class="icon-logout">Registrar Persona</span>
            <span class="material-symbols-outlined">
                add
            </span>
        </a>
    </div>

    <table id="MyTable" class="">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Cuenta Bancaria</th>
                <th>Correo Electrónico</th>
                <th>NIT</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.per_id</td>
                    <td>@data.per_nombre</td>
                    <td>@data.per_direccion</td>
                    <td>@data.per_telefono</td>
                    <td>@data.per_cuenta_bancaria</td>
                    <td>@data.per_correo</td>
                    <td>@data.per_nit</td>
                    <td>@data.per_tipo</td>
                    <td>
                        <a href="@Url.Action("Edit", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined icon-actions-table">
                                edit_square
                            </span>
                        </a>

                        <a href="@Url.Action("Details", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined icon-actions-table">
                                text_ad
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined icon-actions-table">
                                delete
                            </span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/TableScript")
}
