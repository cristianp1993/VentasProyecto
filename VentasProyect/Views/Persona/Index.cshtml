@model IEnumerable<VentasProyect.Models.Persona.Persona>

@{
    var typeForm = ViewBag.Type;
    ViewBag.Title = typeForm;
}

<h2>Personas</h2>

<div class="col-md-12">
    <p>
        @Html.ActionLink("Crear" , "Create")
    </p>
    <table id="MyTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Cuenta Bancaria</th>
                <th>Correo Electrónico</th>
                <th>NIT</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.per_id</td>
                    <td>@data.per_nombre</td>
                    <td>@data.per_direccion</td>
                    <td>@data.per_telefono</td>
                    <td>@data.per_cuenta_bancaria</td>
                    <td>@data.per_correo</td>
                    <td>@data.per_nit</td>
                    <td>@data.per_tipo</td>
                    <td>
                        <a href="@Url.Action("Edit", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined">
                                edit
                            </span>
                        </a>

                        <a href="@Url.Action("Details", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined">
                                data_info_alert
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Persona", new { id = data.per_id })">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
