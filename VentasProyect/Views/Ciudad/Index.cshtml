@model IEnumerable<VentasProyect.Models.Ciudad.Ciudad>

@{
    ViewBag.Title = "Ciudad";
}

<h2>Ciudades</h2>

<div class="col-md-12">
    <p>
        @Html.ActionLink("Crear Nueva Ciudad", "Create")
    </p>
    <table id="MyTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ciudad</th>
                <th>Departamento</th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.ciu_id</td>
                    <td>@data.ciu_nombre</td>
                    <td>@data.ciu_depto</td>                   
                    <td>
                        <a href="@Url.Action("Edit", "Ciudad", new { id = data.ciu_id })">
                            <span class="material-symbols-outlined">
                                edit
                            </span>
                        </a>

                        <a href="@Url.Action("Details", "Ciudad", new { id = data.ciu_id })">
                            <span class="material-symbols-outlined">
                                data_info_alert
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Ciudad", new { id = data.ciu_id })">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
    
}