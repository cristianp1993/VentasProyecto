@model VentasProyect.Models.Ciudad.Ciudad

@{
    ViewBag.Title = "Crear Ciudad";
}

<h2>Crear Ciudad</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ciu_nombre)
        @Html.TextBoxFor(model => model.ciu_nombre, new { @class = "form-control", @onchange = "CapitalizeText(this)" })
        @Html.ValidationMessageFor(model => model.ciu_nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ciu_depto)
        @Html.TextBoxFor(model => model.ciu_depto, new { @class = "form-control",@onchange = "CapitalizeText(this)" })
        @Html.ValidationMessageFor(model => model.ciu_depto)
    </div>

   <button type="submit" class="btn btn-primary">CREAR</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/Generales/General.js"></script>