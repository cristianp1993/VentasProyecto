<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Venture Sales</title>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 



    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr");

</head>
<body>

    @{
        var displayStatus = "";
        var showCloseSesion = ViewBag.SessionStatus;

        if (showCloseSesion != null && !showCloseSesion)
        {
            displayStatus = "none";
        }
        else
        {
            displayStatus = "block";
        }
    }

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Venture Sales", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Productos", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right" style="display:@(showCloseSesion != null && !showCloseSesion ? "block" : "none")">
                    <li><a href="~/Login/Index" class="btn btn-default navbar-btn">Iniciar Sesión</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" style="display:@(showCloseSesion != null && showCloseSesion ? "block" : "none")" id="btnCloseSesion">
                    <li>
                        <a href="" class="btn btn-default navbar-btn">
                            Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </div>

        </div>

    </div>



    <div class="sidebar" style="display:@displayStatus">

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Home" asp-action="Index"> Panel Principal</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                    <span class="material-symbols-outlined">
                        groups
                    </span> Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Ventas" asp-action="Index">
                    <span class="material-symbols-outlined">
                        attach_money
                    </span>
                    Ventas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Categorias" asp-action="Index">
                    <span class="material-symbols-outlined">
                        category
                    </span> Categorias
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Productos" asp-action="Index">
                    <span class="material-symbols-outlined">
                        shopping_cart
                    </span> Productos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Usuario")"><span class="material-icons">face</span> Usuarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Reportes" asp-action="Index">
                    <span class="material-symbols-outlined">
                        lab_profile
                    </span>  Reportes
                </a>
            </li>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Venture Sales</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Layaut/Script.js"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-2.0.5/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.5/datatables.min.js"></script>
</body>
</html>


<style>
    .sidebar {
        position: fixed;
        top: 50px;
        bottom: 0;
        right: 0;
        width: 250px; 
        background-color: #F9FCFA;
        padding: 20px;
        cursor: pointer;
        z-index: 1000;
    }

    .navbar {
        color: #BAC1BC;
        background-color: #F9FCFA;
    }
</style>