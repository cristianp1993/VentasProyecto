@model IEnumerable<VentasProyect.Models.Categoria.Categoria>

@{
    ViewBag.Title = "Categoria";
}

<h2>Categorias</h2>

<div class="col-md-12">
    <p>
        @Html.ActionLink("Crear Categoria", "Create")
    </p>
    <table id="MyTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Categoria</th>   
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.cat_id</td>
                    <td>@data.cat_nombre</td>                                      
                    <td>
                        <a href="@Url.Action("Edit", "Categoria", new { id = data.cat_id })">
                            <span class="material-symbols-outlined">
                                edit
                            </span>
                        </a>

                        <a href="@Url.Action("Details", "Categoria", new { id = data.cat_id })">
                            <span class="material-symbols-outlined">
                                data_info_alert
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Categoria", new { id = data.cat_id })">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
    
}