@model IEnumerable<VentasProyect.Models.usuario.usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Lista de Usuarios</h2>

<div class="col-md-10">
    <p>
        @Html.ActionLink("Crear Nuevo Usuario", "Create")
    </p>
    <table id="MyTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Correo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.usu_id</td>
                    <td>@usuario.usu_nombre</td>
                    <td>@usuario.usu_rol</td>
                    <td>@usuario.usu_correo</td>
                    <td>
                        <a href="@Url.Action("Edit", "Usuario", new { id = usuario.usu_id })">
                            <span class="material-symbols-outlined">
                                edit
                            </span>
                        </a>

                        <a href="@Url.Action("Details", "Usuario", new { id = usuario.usu_id })">
                            <span class="material-symbols-outlined">
                                data_info_alert
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Usuario", new { id = usuario.usu_id })">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}