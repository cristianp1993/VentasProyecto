@model VentasProyect.Models.usuario.usuario

@{
    ViewBag.Title = "Crear Nuevo Usuario";
}

<h2>Crear Nuevo Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.usu_nombre)
        @Html.TextBoxFor(model => model.usu_nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.usu_nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.usu_rol)
        @Html.TextBoxFor(model => model.usu_rol, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.usu_rol)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.usu_correo)
        @Html.TextBoxFor(model => model.usu_correo, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.usu_correo)
    </div>

    <button type="submit" class="btn btn-primary">Guardar Usuario</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
